.table-sm
	tr
		td
			font-size: 12px;
.with-padding
	padding-top: 20px;
.layer-disabled
	position:absolute;
	z-index: 99;
	opacity:0.5;
	background-color: #FFF;
	width:100%;
	height: 100%;
	top:0px;
	left:0px;
label.error
	color: red;
 
.chosen-search
	input
		width: 100% !important;

.panel-form-sm
	.form-group
		margin-bottom: 0px;
	.control-label
		padding-top: 0px;
.currency_cotizacion
	font-size: 10px;
	margin-right: 3px;		
#tabla_productos
	input
		width:100%;
	select
		width:100% !important;
	.c1
		width:25px;
	.c2
		width:65px;		
	.c8
		width: 65px;
	.c6,.c7
		width: 115px;
		
	.col-descuento
		width: 95px;
	.control-descuento
		width:60px !important;
#select2-producto_id-results
	.select2-results__option
		font-size: 12px;
.select2-results__option--highlighted
	.card-producto
		border:solid 1px #fff;
.card-producto
	overflow:hidden;
	display:block;
	border:solid 1px #d8d8d8;
	padding: 5px;
	.title
		font-weight: bold;
		font-size: 15px;
	img
		max-width:150px;
		width:100%;
		float:left;
		margin-right: 15px;
.card-producto-selected
	float:left;
#tabla_productos
	.select2-container .select2-selection--single
		height: auto !important;
	.card-producto-selected
		 
		img
			width:50px;
			float:left;
		.description
			display:none;
		.title
			font-size: 14px;
			line-height: 50px;
input.error,select.error
	border:solid 1px red;
.iframe-view-cotizacion
	width: 100%;
	height: 400px;;
.custom-form-align
	.form-group
		label
			text-align: right;
			

.modal-full
	.modal-dialog  
		width: 100%;
		height: 100%;
		margin: 0;
		padding: 0;


	.modal-content  
		height: auto;
		min-height: 100%;
		border-radius: 0;
 
.div-custom-date
	position:relative;
	i
		float:right;
		position: absolute;
		right: 10px;
		top: 5px;
.proyectos-info
	.form-group
		display:block;
		width:100%;
		float:left;
		
	.summary-title
		margin-bottom: 15px;
		font-weight: bold;
		
.proyecto-informacion-general
	.form-group
		margin-bottom: 2px;
		border-bottom: solid 1px #fff6f6;
	.form-group:last-child
		border:none !important;

.well-custom
	.form-group
		margin-bottom: 5px;